<% if @matter.errors.any? %>
  <div class="alert alert-danger">
    Há erros no formulário, por favor verifique
  </div>
<% end %>
<%= simple_form_for @matter, defaults: { label: false } do |f| %>
  <ul class="list-inline">
    <li>
      <ul class="list-unstyled">
        <li><%= f.label :title, "Nome" %></li>
        <li><%= f.input :title, input_html: { class: 'form-control' }, required: true %></li>
      </ul>
    </li>
    <li>
      <ul class="list-unstyled">
        <li><%= f.label :credits, "Créditos" %></li>
        <li><%= f.input :credits, as: :string, input_html: { class: 'form-control' } %></li>
      </ul>
    </li>
  </ul>
  <ul class="list-inline">
    <li><%= f.label :teacher, "Professor" %></li><br/>
    <li><%= f.input :teacher, input_html: { class: 'form-control' } %></li>
  </ul>
  <ul class="list-inline">
    <li>
      <%= f.submit "Salvar", class: "btn btn-primary" %>
      <%= link_to "Voltar", matters_path, class: "btn btn-default" %>
    </li>
  </ul>
<% end %> 
