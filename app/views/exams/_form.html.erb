<% if @exam.errors.any? %>
<div class="alert alert-danger">
  Há erros no formulário, por favor verifique.
</div>
<% end %>

<%= simple_form_for @exam, html: { class: 'form-horizontal' } do |f| %>
<ul class="list-inline">
  <li>
    <ul class="list-unstyled">
      <li>
      <%= f.association :matter, prompt: "Selecione", input_html: { class: 'form-control' } %>
      </li>
    </ul>
  </li>
</ul>
<% end %>

